{
  "compilerOptions": {
    "target": "es6",
    "lib": ["esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    // "esModuleInterop": true,
    // "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "sourceMap": true,
    "rootDir": "src",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "outDir": "out",
    "jsx": "react"
  },
  "include": ["src"],
  "exclude": ["node_modules", "out"]
}
